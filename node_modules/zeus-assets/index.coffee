html = require("zeus-html")(true, 2)
class ZeusAssets
    constructor: ->
        @styles = {}
        @scripts = {}

    registerStyles: (id, href)->
        @styles[id] = href

    registerScript: (id, href)->
        @scripts[id] = href

    render: ->
        html.output = ""
        html.link rel: "stylesheet" , id: sid, href: shref for sid, shref of @styles
        html.script type: "text/javascript", id: id, src: href for id, href of @scripts
        html.output

module.exports = ZeusAssets