html = require("zeus-html")(true)
class ZeusAdminBreadcrumbs
    constructor: ->
        @paths = []

    add: (title, link)->
        @paths.push title: title, link: link

    render: ->
        html.output = '';
        for path in @paths
            if path.link?
                html.li {}, (li)->
                    li.a {href: path.link, class: "link-effect"}, path.title
            else
                html.li {}, path.title
        html.output
module.exports = new ZeusAdminBreadcrumbs()