events = require("zeus-events")
swig = require("swig")

class ZeusAdminPages 
    constructor: ->
        @pages = []
        events.emit "admin-pages:init", this

    getPages: ->
        @pages

    add: (params)->
        @pages.push 
            name: params.name
            route: params.route
            view: params.view
            title: params.title
            subtitle: params.subtitle
        data = events.emit "prerender-#{params.name}-page", this

module.exports = new ZeusAdminPages