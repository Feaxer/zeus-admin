path = require("path")
events = require("zeus-events")

events.on "prerender-index-page", (data)->
    data.title = 1233

events.on "admin-breadcrumbs", (bc)->
    bc.add "Main Page", "/admin"
    bc.add "Empty"

events.on "admin-pages:init", (pages)->
    pages.add 
        name: "index"
        route: "/"
        title: "Main page"
        subtitle: "Main page subtitle"
        view: path.join(__dirname, "pages", "index.html")